<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?attr/mainColor">

        <ImageView
            android:id="@+id/image_drawer_home"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_gravity="center_horizontal"
            android:text="融视频-详情"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>
<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/contentToolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@color/colorPrimary"-->
<!--            app:navigationIcon="@mipmap/fanhui"-->
<!--            app:titleTextColor="#fff"></androidx.appcompat.widget.Toolbar>-->


    <WebView
        android:id="@+id/show_news"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="16"></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#ffffff">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="写评论..."
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/collect_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@mipmap/favorite"
            android:layout_margin="5dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
